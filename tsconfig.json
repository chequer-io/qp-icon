{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@": ["."],
      "@/*": ["./*"],
      "@scripts/*": ["scripts/*"],
      "@stories/*": ["stories/*"],
      "@icons/*": ["icons/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "typings/**.d.ts"
  ],
  "exclude": ["node_modules"]
}
